}
#faq h1 img {
    width: 30px;
    margin: 0px 20px;
    align-items: flex-end;
}


@media (max-width: 650px){
.accordion {
    font-size: 18px;
}

}


@media (max-width: 400px){
.accordion {
    font-size: 14px;
    height: 50px;
}

.accordion:after {
    font-size: 30px;
