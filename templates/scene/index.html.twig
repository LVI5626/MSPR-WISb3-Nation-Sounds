{% extends 'scene.html.twig' %}

{% block title %}Nos scènes - Nations Sounds{% endblock %}

{% block body %}
<div id="title">
    <h1><img src="/img/icon/music.png"/>Les scènes</h1>
</div>


        {% for scene in scenes %}
                <div class="background-scene" style="background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(2, 2, 9, 0.5), rgba(2, 2, 9, 0.5)) ,url({{ scene.background }});" onclick="location.href='{{ path('scene_show', {'name': scene.name}) }}'">
                <h1>{{ scene.name }}</h1>
                </div>

        {% endfor %}

{% endblock %}
