

<form method="post" action="{{ path('scene_delete', {'name': scene.name}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ scene.name) }}">
    <button class="btn">Delete</button>
</form>