{% extends 'scene.html.twig' %}

{% block title %}{{ scene.name }} - Nation Sounds{% endblock %}

{% block body %}

        <div id="background-slider" style="background-image: url({{ scene.background }});">
                <h1>{{ scene.name }}</h1>
        </div>

        <div id="flex-artist-show">
                <div class="artist-show-image">
                    <img src="{{ scene.picture }}" style=""/>
                </div>


                <div class="artist-show-text">
                                <p>{{ scene.description }}</p>
                </div>
        </div>
{% endblock %}
