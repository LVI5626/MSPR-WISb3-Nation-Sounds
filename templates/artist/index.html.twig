{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}

    <div style="background-color: #4463EB; margin: 10px; display: flex; padding: 40px 20px; flex-wrap: wrap; font-size: 24px; justify-content: center; border-radius: 10px;">
    {% for artist in artists %}
        <aside style="margin:20px 40px;">
                <a href="{{ path('artist_show', {'name': artist.name}) }}" style="color: #FECC00; text-decoration: none; font-weight: bold;"><p style="text-align: center;">{{ artist.name }}</p></a>
        </aside>
    {% endfor %}
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Description</th>
                <th>Genre</th>
                <th>Date</th>
                <th>Hour</th>
                <th>Scene</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.photo }}</td>
                <td>{{ artist.description }}</td>
                <td>{{ artist.genre }}</td>
                <td>{{ artist.date }}</td>
                <td>{{ artist.hour }}</td>
                <td>{{ artist.scene }}</td>
                <td>
                    <a href="{{ path('artist_show', {'name': artist.name}) }}">show</a>
                    <a href="{{ path('artist_edit', {'id': artist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artist_new') }}">Create new</a>
{% endblock %}
