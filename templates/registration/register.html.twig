#background{
    background-color: #4463EB;
    margin: 10px;
    border-radius: 10px;
    padding: 20px;
    color: #fff;
    background-image: url("/img/peoples/regist.png");
    background-repeat: no-repeat;
    background-position: bottom right;
    background-size: 200px;
}

#background h1{
    font-family: "Hero";
    text-transform: uppercase;
}

input{
    background-color: #FF4298;
    padding: 7px 5px;
    border: 0px solid transparent;
    border-radius: 5px;
    color: #fff;
    font-weight: bold;
    margin: 5px 0px;
}

::placeholder {
  color: #fff;
  font-weight: normal;
}

.form{
    display: table-caption;
    flex-direction: row;
    padding: 20px 0px;
    color: #fff
}

.form .required{
    font-size: 22px;
    font-weight: normal;
}

.btn{
    background-color: #FF4298;
    padding: 7px 5px;
    border-radius: 10px;
    border: 0px solid;
    color: #fff
}
i{
    color: #fff;
}

input[type=date]::-webkit-calendar-picker-indicator {
    color: rgba(0, 0, 0, 0);
    opacity: 1;
    display: block;
    background: url(/img/icon/calendar-date.png) no-repeat;
    background-position: center center;
    background-size: 20px;
    width: 20px;
    height: 20px;
    border-width: thin;
}

@media (max-width: 500px){
    .form .required {
    font-size: 17px;
}

.form {
    padding: 15px 0px;
}
}
